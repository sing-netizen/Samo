            'en': {
                // 標題和副標題
                'mainTitle': 'Table Tennis Team Management System',
                'subtitle': 'Professional team management and teaching support platform',
                
                // 頁面標題
                'announcements': 'Announcements',
                'adminSupport': 'Administrative Support',
                'teachingSupport': 'Teaching Support',
                'contactUs': 'Contact Us',
                
                // 公告頁面
                'noAnnouncements': 'No announcements currently',
                
                // 行政支援按鈕
                'classReminder': 'Class Reminder System',
                'classReminderDesc': 'Set training and match reminders',
                'schedule': 'Training Schedule',
                'scheduleDesc': 'View and arrange training times',
                'feeManagement': 'Fee Management',
                'feeManagementDesc': 'Manage team fees and payment records',
                'equipment': 'Equipment Management',
                'equipmentDesc': 'Team equipment borrowing and return',
                
                // 教學支援按鈕
                'attendance': 'Attendance System',
                'attendanceDesc': 'Record student attendance',
                'checkIn': 'Check-in System',
                'checkInDesc': 'Student training check-in records',
                'leaveRequest': 'Leave Request System',
                'leaveRequestDesc': 'Submit and approve leave applications',
                'lateNotice': 'Late Notice System',
                'lateNoticeDesc': 'Record and notify late arrivals',
                
                // 聯絡資訊
                'phone': 'Phone Number',
                'email': 'Email',
                'officeHours': 'Office Hours',
                'hoursDetail': 'Monday-Friday: 09:00-18:00<br>Saturday: 10:00-16:00',
                'location': 'Training Location',
                'locationDetail': 'Table Tennis Room, 3rd Floor, Zhongshan Sports Center, Taipei',
                
                // 導航標籤
                'announcementsNav': 'Announcements',
                'adminSupportNav': 'Admin Support',
                'teachingSupportNav': 'Teaching Support',
                'contactUsNav': 'Contact',
                
                // 其他
                'swipeHint': 'Swipe left/right to switch pages',
                'languageToggle': 'Toggle Language'
            }
        };

        // 系統狀態
        let currentLanguage = 'zh-TW';
        let currentPage = 'announcements';
        let touchStartX = 0;
        let touchEndX = 0;

        // DOM元素
        const pages = {
            announcements: document.getElementById('announcements'),
            admin: document.getElementById('admin'),
            teaching: document.getElementById('teaching'),
            contact: document.getElementById('contact')
        };
        
        const navButtons = document.querySelectorAll('.nav-button');
        const languageToggle = document.getElementById('languageToggle');
        const languageText = document.getElementById('languageText');

        // 初始化函數
        function init() {
            // 檢測瀏覽器語言
            const browserLang = navigator.language || navigator.userLanguage;
            const savedLang = localStorage.getItem('pingpongLang');
            
            // 設定語言
            if (savedLang && (savedLang === 'zh-TW' || savedLang === 'en')) {
                currentLanguage = savedLang;
            } else if (browserLang.startsWith('zh')) {
                currentLanguage = 'zh-TW';
            } else {
                currentLanguage = 'en';
            }
            
            updateLanguage();
            
            // 設定事件監聽器
            setupEventListeners();
            
            // 設定當前頁面
            changePage(currentPage);
        }

        // 設定事件監聽器
        function setupEventListeners() {
            // 導航按鈕點擊
            navButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const page = button.getAttribute('data-page');
                    changePage(page);
                });
            });
            
            // 語言切換
            languageToggle.addEventListener('click', toggleLanguage);
            
            // 滑動手勢檢測
            document.addEventListener('touchstart', e => {
                touchStartX = e.changedTouches[0].screenX;
            }, {passive: true});
            
            document.addEventListener('touchend', e => {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            }, {passive: true});
            
            // 按鈕懸停效果（桌面設備）
            document.querySelectorAll('.function-button').forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                
                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        }

        // 切換頁面
        function changePage(pageId) {
            // 隱藏所有頁面
            Object.values(pages).forEach(page => {
                page.classList.remove('active');
            });
            
            // 顯示目標頁面
            pages[pageId].classList.add('active');
            
            // 更新導航按鈕狀態
            navButtons.forEach(button => {
                if (button.getAttribute('data-page') === pageId) {
                    button.classList.add('active');
                } else {
                    button.classList.remove('active');
                }
            });
            
            // 更新當前頁面
            currentPage = pageId;
            
            // 添加淡入效果
            const activePage = pages[pageId];
            const content = activePage.querySelector('.announcement-content, .contact-card, .grid-container');
            if (content) {
                content.classList.remove('fade-in');
                void content.offsetWidth; // 觸發重排以重置動畫
                content.classList.add('fade-in');
            }
        }

        // 處理滑動手勢
        function handleSwipe() {
            const swipeThreshold = 50; // 最小滑動距離
            const swipeDistance = touchEndX - touchStartX;
            
            // 向左滑動（下一頁）
            if (swipeDistance < -swipeThreshold) {
                navigateNext();
            }
            
            // 向右滑動（上一頁）
            if (swipeDistance > swipeThreshold) {
                navigatePrev();
            }
        }

        // 導航到下一個頁面
        function navigateNext() {
            const pageOrder = ['announcements', 'admin', 'teaching', 'contact'];
            const currentIndex = pageOrder.indexOf(currentPage);
            const nextIndex = (currentIndex + 1) % pageOrder.length;
            changePage(pageOrder[nextIndex]);
        }

        // 導航到上一個頁面
        function navigatePrev() {
            const pageOrder = ['announcements', 'admin', 'teaching', 'contact'];
            const currentIndex = pageOrder.indexOf(currentPage);
            const prevIndex = (currentIndex - 1 + pageOrder.length) % pageOrder.length;
            changePage(pageOrder[prevIndex]);
        }

        // 切換語言
        function toggleLanguage() {
            currentLanguage = currentLanguage === 'zh-TW' ? 'en' : 'zh-TW';
            localStorage.setItem('pingpongLang', currentLanguage);
            updateLanguage();
        }

        // 更新界面語言
        function updateLanguage() {
            // 更新所有帶有 data-lang-key 屬性的元素
            document.querySelectorAll('[data-lang-key]').forEach(element => {
                const key = element.getAttribute('data-lang-key');
                if (translations[currentLanguage][key]) {
                    if (element.tagName === 'INPUT' || element.tagName === 'TEXTAREA') {
                        element.placeholder = translations[currentLanguage][key];
                    } else {
                        element.innerHTML = translations[currentLanguage][key];
                    }
                }
            });
            
            // 更新語言切換按鈕文本
            languageText.textContent = currentLanguage === 'zh-TW' ? 'EN' : '中文';
            
            // 更新頁面標題
            document.title = currentLanguage === 'zh-TW' 
                ? '乒乓球隊管理系統' 
                : 'Table Tennis Team Management System';
        }

        // 初始化應用
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
